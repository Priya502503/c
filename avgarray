#include<stdio.h>
void main()
{
    int a[10],i,n,sum=0;
    float avg;
    printf("enter the size of array:");
    scanf("%d",&n);
    printf("enter the elements of array:");
    for(i=0;i<n;++i)
    {scanf("%d",&a[i]);
    }
    for(i=0;i<n;i++)
    { 
        sum=sum+a[i];
    }
    for(i=0;i<n;++i)
    {
        avg=(sum/n);
    }
    printf("sum of elements of array is %d\n",sum);
    printf("average of elements of array is %f",avg);
    
}

